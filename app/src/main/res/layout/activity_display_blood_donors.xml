<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display_blood_donors">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/cardview_shadow_start_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Requester_name_display"
        android:textAlignment="center"
        android:text="(Requester name here)"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:layout_margin="10dp"
        android:padding="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Requester_blood_grp_display"
        android:textAlignment="center"
        android:layout_below="@+id/toolbar"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="(Requester bloood grp here)"
        android:padding="10dp"
        android:layout_alignParentLeft="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_donor_recycler_view"
        android:layout_below="@+id/Requester_blood_grp_display"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"></androidx.recyclerview.widget.RecyclerView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Requester_delete_account_progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>