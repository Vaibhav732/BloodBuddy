<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:orientation="vertical"
    android:elevation="90dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardview_light_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donor_name_card"
            android:text="donor name"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donor_blood_card"
            android:text="donor blood"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donor_phone_card"
            android:text="donor phone"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donor_email_card"
            android:text="donor email"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donor_address_card"
            android:text="donor address"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20sp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>